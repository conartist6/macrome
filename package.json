{
  "name": "macrome",
  "version": "0.0.1",
  "description": "A build system for checked in assets",
  "main": "lib/index",
  "scripts": {
    "test": "exit 1",
    "verify": "run-s lint",
    "format": "prettier --write '**/*.{js,json,md}'",
    "lint": "eslint --ext .mjs,.js ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{mjs,js,ts}": [
      "eslint"
    ],
    "*.{md,json}": [
      "prettier -c"
    ]
  },
  "keywords": [
    "build",
    "macro",
    "generate",
    "generator",
    "babel"
  ],
  "repository": "git@github.com:conartist6/macrome.git",
  "author": "Conrad Buck <conartist6@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "fb-watchman": "^2.0.1",
    "find-up": "^4.1.0",
    "git-state": "^4.1.0",
    "ignore": "^5.1.4",
    "import-fresh": "^3.2.1",
    "loglevel": "^1.6.2",
    "md5": "^2.2.1",
    "micromatch": "^4.0.2",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "path-complete-extname": "^1.0.0",
    "picomatch": "^2.0.7",
    "read-chunk": "^3.2.0",
    "recursive-readdir": "^2.2.2",
    "rimraf": "^2.6.2"
  },
  "devDependencies": {
    "cross-env": "^5.1.6",
    "eslint": "^6.5.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^3.0.7",
    "lint-staged": "^9.4.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2"
  }
}
